<h1 class="page-header">My Profile</h1>

<%= form_for :user, url: { action: 'update_profile' }, html: { class: 'form-horizontal' } do |f| %>

    <div class="form-group">
      <%= f.label :first_name, 'First Name', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: 'form-control', value: current_user.first_name %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, 'Last Name', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: 'form-control', value: current_user.last_name%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :address, 'Location', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :address, placeholder: current_user.address, class: 'form-control', id: 'autocomplete' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone_no, 'Phone No.', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :phone_no, placeholder: '(xxx) xxx-xxxx', class: 'form-control', value: current_user.phone_no %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :per_day_price, 'Daily Price', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.number_field :per_day_price, min: '0', placeholder: 'Per Day Price ( $ )', class: 'form-control', value: current_user.per_day_price %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :pets_accepted, 'Pets allowed', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.check_box :pets, {multiple:true}, name: 'pets', value: '0' %> Dogs
        <%= f.check_box :pets, {multiple:true}, name: 'pets', value: '1' %> Cats
        <%= f.check_box :pets, {multiple:true}, name: 'pets', value: '2' %> Reptiles
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Update Details', class: 'btn btn-success' %>
      </div>
    </div>

    <%= f.text_field :lat, type: 'hidden' %>
    <%= f.text_field :lng, type: 'hidden' %>
<% end %>
